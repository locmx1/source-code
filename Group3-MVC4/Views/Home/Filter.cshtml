@{
    ViewBag.Title = "Tìm kiếm nâng cao";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/dest/css/custom.css" rel="stylesheet"/>

<div class="row" style="font-family: 'Arial'">
    <div class="col-sm-12">
        <span style="font-size: 16px;">Lựa chọn tiêu chí tìm kiếm</span>
        <hr/>
    </div>
    <div class="col-sm-12">
        <div class="well">
            <form class="form-horizontal">
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Từ khóa</label>
                    <div class="col-sm-10">
                        <input type="email" class="form-control" id="inputEmail3" placeholder="Email">
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputPassword3" class="col-sm-2 control-label">Tag</label>
                    <div class="col-sm-10">
                        <input type="password" class="form-control" id="inputPassword3" placeholder="Password">
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputPassword3" class="col-sm-2 control-label">Loại đồng hồ</label>
                    <div class="col-sm-10">
                        <select class="form-control">
                            <option> Đeo tay</option>
                            <option> Quả lắc</option>
                            <option> Treo tường</option>
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <label for="brand" class="col-sm-2 control-label">Hãng sản xuất</label>
                    <div class="col-sm-10">
                        <select class="form-control" id="brand">
                            <option> Casio</option>
                            <option> D & G</option>
                            <option> Rolex</option>
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputPassword3" class="col-sm-2 control-label">Giá từ</label>
                    <div class="col-sm-4">
                        <input type="password" class="form-control" id="inputPassword3" placeholder="Password">
                    </div>
                    <label for="inputPassword3" class="col-sm-2 control-label">đến</label>
                    <div class="col-sm-4">
                        <input type="password" class="form-control" id="inputPassword3" placeholder="Password">
                    </div>
                </div>
                <div class="form-group">
                    <label for="glass" class="col-sm-2 control-label">Chất liệu mặt kính</label>
                    <div class="col-sm-4">
                        <input type="text" class="form-control" id="glass" placeholder="Mặt kính">
                    </div>
                    <label for="case" class="col-sm-2 control-label">Chất liệu vỏ</label>
                    <div class="col-sm-4">
                        <input type="text" class="form-control" id="case" placeholder="Mặt kính">
                    </div>
                </div>
                <div class="form-group">
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button type="submit" class="btn btn-default" style="background-color: #172431; color: #fff;">Tìm kiếm</button>
                    </div>
                </div>
            </form>
        </div><!-- End Well -->
    </div>
</div>

