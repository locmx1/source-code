@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<form class="form-horizontal">
    <fieldset>

        <!-- Form Name -->
        <legend>Form Name</legend>

        <!-- Text input-->
        <div class="control-group">
            <label class="control-label" for="textinput">Text Input</label>
            <div class="controls">
                <input id="textinput" name="textinput" placeholder="placeholder" class="input-xlarge" type="text">
                <p class="help-block">help</p>
            </div>
        </div>

        <!-- Prepended text-->
        <div class="control-group">
            <label class="control-label" for="prependedtext">Prepended Text</label>
            <div class="controls">
                <div class="input-prepend">
                    <span class="add-on">prepend</span>
                    <input id="prependedtext" name="prependedtext" class="input-xlarge" placeholder="placeholder" type="text">
                </div>
                <p class="help-block">help</p>
            </div>
        </div>

    </fieldset>
</form>
