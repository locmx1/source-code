@{
    ViewBag.Title = "Typeahead";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/dest/css/custom.css" rel="stylesheet" />
<div class="container">
    <div class="col-md-5">
        <div class="form-area">
            <form role="form">
                <br style="clear:both">
                <h3 style="margin-bottom: 25px; text-align: center;">Contact Form</h3>
                <div class="form-group">
                    <input type="text" class="form-block" id="name" name="name" placeholder="Name" required>
                </div>
                <div class="form-group">
                    <input type="text" class="form-block" id="email" name="email" placeholder="Email" required>
                </div>
                <div class="form-group">
                    <input type="text" class="form-block" id="mobile" name="mobile" placeholder="Mobile Number" required>
                </div>
                <div class="form-group">
                    <input type="text" class="form-block" id="subject" name="subject" placeholder="Subject" required>
                </div>
                <div class="form-group">
                    <textarea class="form-block" type="textarea" id="message" placeholder="Message" maxlength="140" rows="7"></textarea>
                    <span class="help-block"><p id="characterLeft" class="help-block ">You have reached the limit</p></span>
                </div>

                <a href="#" class="beta-btn primary beta-btn-medium">Outline Medium Button <i class="fa fa-chevron-right"></i></a>
            </form>
        </div>
    </div>
</div>
<div id="myModal" class="modal fade in">
    <div class="modal-dialog">
        <div class="modal-content">

            <div class="modal-header">
                <a class="btn btn-default" data-dismiss="modal"><i class="fa fa-remove"></i></a>
                <h4 class="modal-title">Header</h4>
            </div>
            <div class="modal-body">
                <h4>Text in a modal</h4>
                <p>Duis mollis, est non commodo luctus, nisi erat porttitor ligula.</p>
            </div>
            <div class="modal-footer">
                <div class="btn-group">
                    <button class="btn btn-primary"><span class="fa fa-check"></span> Xác nhận</button>
                </div>
            </div>

        </div><!-- /.modal-content -->
    </div><!-- /.modal-dalog -->
</div><!-- /.modal -->
<script type="text/javascript">
    $(function() {
        // Ajax 
        $.ajax({
            type: 'GET',
            url: '@Url.Action("PopupModel", "Demo")',
            dataType: "json",
            contentType: "application/json; charset=utf-8",
            //data: "{'Id': '" + Id + "'}", // if any
            success: function (data) {
                if (data == "Confirm") {
                    $('#myModal').modal('show');
                }
            },
            error: function (xhr, ajaxOptions, thrownError) {
                alert(xhr.status);
                alert(thrownError);
            }
        });
    })
</script>
